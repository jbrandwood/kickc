// Minimal struct - array of struct

struct Point {
    byte x;
    byte y;
};

struct Point[4] points;

void main() {
    for( byte i: 0..4) {
        points[i].x = i;
        points[i].y = i+1;
    }
    const byte* SCREEN = 0x0400;
    for( byte i: 0..4) {
        SCREEN[i] = points[i].x;
        (SCREEN+40)[i] = points[i].y;
    }
}