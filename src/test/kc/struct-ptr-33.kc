// Example of a struct containing an array

struct Person {
    char id;
    char[13] name;
    unsigned int age;
};

struct Person[2] persons = {
    { 7, "jesper", 321 },
    { 9, "henry", 123}
};

void main() {
    const char* SCREEN = 0x0400;
    struct Person* person = persons;
    SCREEN[0] = person->name[2];
    person++;
    SCREEN[1] = person->name[2];
}



