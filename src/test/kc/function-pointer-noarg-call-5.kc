// Tests calling into arrays of pointers to non-args no-return functions


void()*[2] fns = { &fn1, &fn2};

void main() {
    byte i = 0;
    while(true) {
        void()* f = fns[++i&1];
        (*f)();
    }
}

void fn1() {
    const byte* BORDERCOL = $d020;
    (*BORDERCOL)++;
}

void fn2() {
    const byte* BGCOL = $d021;
    (*BGCOL)++;
}

