// Tests using integer conditions in if()
// This should produce '+ ++ ++' at the top of the screen

const byte* SCREEN = 0x0400;

void main() {
    byte idx = 0;
    // Hardcoded 0
    if(0) { SCREEN[idx++] = '0'; }
    // Hardcoded non-0
    if(999) SCREEN[idx++] = '+';
    SCREEN[idx++] = ' ';
    // loop byte
    for( byte i:0..2) {
        if(i) SCREEN[idx++] = '+';
    }
    SCREEN[idx++] = ' ';
    // loop word
    for( word i:0..2) {
        if(i) SCREEN[idx++] = '+';
    }

}