// Check that multiplication by factors of 2 is converted to shifts

void main() {
    const byte* SCREEN = $400;

    for(byte i: 0..10) {
        SCREEN[i] = i*2;
        (SCREEN+40)[i] = i*4;
        (SCREEN+80)[i] = i*8;
        // And a single signed byte
        signed byte sb = -(signed byte)i;
        (SCREEN+160)[i] = (byte)(sb*2);

    }

}

