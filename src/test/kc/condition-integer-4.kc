// Tests using integer conditions in && and || operator
// This should produce '01010101', '00110011', '00010001', '01110111' at the top of the screen

const byte* SCREEN = 0x0400;

void main() {
    byte idx = 0;
    for( byte i:0..7) {
        if(i&1)
            (SCREEN+40*0)[idx] = '+';
        if(i&2)
            (SCREEN+40*1)[idx] = '+';
        if(i&1 && i&2)
            (SCREEN+40*2)[idx] = '+';
        if(i&1 || i&2)
            (SCREEN+40*3)[idx] = '+';
        idx++;
    }
}