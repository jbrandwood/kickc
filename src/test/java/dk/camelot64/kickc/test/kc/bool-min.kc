// A Minimal test of boolean variables.
// Boolean variables are bytes under the hood
// 0: false, !=0 : true

const byte* SCREEN = $400;

void main() {
    bool_const_if();
    bool_const_vars();
}

// A constant boolean inside an if()
void bool_const_if() {
    boolean b = true;
    if(b) {
        SCREEN[0] = 't';
    } else {
        SCREEN[0] = 'f';
    }
}

// A bunch of constant boolean vars (used in an if)
void bool_const_vars() {
    byte a = 14;
    boolean b1 = (a==15);
    boolean b2 = 21 < a;
    boolean b = b1 || b2;
    if(b) {
        SCREEN[1] = 't';
    } else {
        SCREEN[1] = 'f';
    }
}