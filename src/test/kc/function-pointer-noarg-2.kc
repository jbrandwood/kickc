// Tests creating and assigning pointers to non-args no-return functions

void main() {
    const byte* SCREEN = $400;

    void()* f;

    for ( byte i: 0..100) {
        if((i&1)==0) {
            f = &fn1;
        } else {
            f = &fn2;
        }
    }
}

void fn1() {
    const byte* BORDERCOL = $d020;
    (*BORDERCOL)++;
}

void fn2() {
    const byte* BGCOL = $d021;
    (*BGCOL)++;
}