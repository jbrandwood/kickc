// Tests creating, assigning and calling pointers to non-args no-return functions

void main() {
    const byte* SCREEN = $400;

    void()* f;

    byte i = 0;
    while(true) {
        ++i;
        if((i&1)==0) {
            f = &fn1;
        } else {
            f = &fn2;
        }
       (*f)();
    }
}

void fn1() {
    const byte* BORDERCOL = $d020;
    (*BORDERCOL)++;
}

void fn2() {
    const byte* BGCOL = $d021;
    (*BGCOL)++;
}