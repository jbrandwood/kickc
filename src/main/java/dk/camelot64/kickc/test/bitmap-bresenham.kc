const byte* BITMAP = $2000;

byte[] plot_xlo = $1000;
byte[] plot_xhi = $1100;
byte[] plot_ylo = $1200;
byte[] plot_yhi = $1300;
byte[] plot_bit = $1400;

void main() {
    *BGCOL = 0;
